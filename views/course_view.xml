<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_course_tree" model="ir.ui.view">
    <field name="name">course.course.tree</field>
    <field name="model">course.course</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="teacher_id"/>
        <field name="average_age"/>
      </tree>
    </field>
  </record>

  <record id="view_course_form" model="ir.ui.view">
    <field name="name">course.course.form</field>
    <field name="model">course.course</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="teacher_id"/>
            <field name="staff_id"/>
            <field name="average_age" readonly="1"/>
          </group>
          <group>
            <field name="description"/>

          </group>
<notebook >

           <page string="Students">
    <field name="student_ids" readonly="1">
        <tree editable="bottom">
            <field name="name"/>
            <field name="age"/>
        </tree>

    </field>
</page>

</notebook>

        </sheet>
      </form>
    </field>
  </record>

  <record id="action_course" model="ir.actions.act_window">
    <field name="name">Courses</field>
    <field name="res_model">course.course</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_course_child" name="Courses" parent="menu_course" action="action_course"/>
</odoo>
